<%- include("../partials/header.ejs") %>
    <h1 class="text-3xl text-black pb-6">Add HMC</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Add HMC
            </p>
            <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3" role="alert">
                <svg class="w-4 h-4 mr-2" fill="white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <path
                        d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z" />
                </svg>
                <p>Please add your PDF</p>
            </div>
           
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="" method="POST"
                    enctype="multipart/form-data">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="name">Name</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text"
                            name="name" placeholder="Name">
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="post">Post</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="post" type="text"
                            name="post"  required placeholder="Post"></input>
                    </div>
                    
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="image">Image</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="image" type="file"
                            name="image" placeholder="Image url"></input>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="contno">Contact Number</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="contno" type="number"
                            name="contno" placeholder="Contact Number"></input>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="roomno">Room Number</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="roomno" type="text"
                            name="roomno" placeholder="Room Number"></input>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="email">Email ID</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="email" type="email"
                            name="email" placeholder="Email ID"></input>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="priono">Priority Number</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" id="priono" type="number"
                            name="priono" placeholder="Priority Number"></input>
                    </div>

                   

                    <div class="mt-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
                            type="submit">Add</button>
                    </div>

                    <div class="mt-2">
                        <a class="hover:text-blue-500" href="/admin/hmc">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>