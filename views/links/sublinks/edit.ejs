<%- include("../../partials/header.ejs") %> 
<h1 class="text-3xl text-black pb-6">Add Sublinks to <%=link.name%></h1>
<div class="flex flex-wrap justify-center">
    <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
        <div class="leading-loose">
            <form class="p-10 bg-white rounded shadow-xl" action="/links/<%=link.id%>/sublinks/<%=sublink.id%>?_method=PUT" method="POST">
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="name">Sublink Name</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" name="name" type="text" required value=<%=sublink.name%> >
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="url">URL Link</label>
                    <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="url" name="url" type="text" required value=<%=sublink.url%> >
                </div>
                <div class="mt-2">
                    <label class="block text-sm text-gray-600" for="priority_number">Priority Number</label>
                    <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="number" id="priority" name="priority_number" value=<%=sublink.priority_number%> required></input>
                </div>
                <div class="mt-6">
                    <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Edit Sublink</button>
                </div>
                <div class="mt-6">
                    <a class="hover:text-blue-500" href="/links/<%=link.id%>/sublinks">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../../partials/footer.ejs") %> 