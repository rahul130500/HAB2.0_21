    <style>
        .tabs {
            border-left: 1.5px solid #525252;
        }

        .tab {
            display: inline-block;
            /* padding: 0 0.75rem; */
        }

        .hostelsnav {
            background-color: transparent;
            transition: all 0.4s;
        }

        .sticky_nav {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #fff;
            transition: all 0.4s;
            z-index: 100;
        }

        .nav_logo {
            width: 50px;
            display: none;
            transition: all 0.4s;
        }

        .tabStyle {
            position: relative;
            color: black;
        }

        .tabStyle::after {
            content: "";
            height: 2px;
            width: 50%;
            background-color: #e54f6d;
            position: absolute;
            bottom: 0em;
            left: 50%;
            transform: translate(-50%);
        }

        /* .rotate {
            -moz-transition: all .5s linear;
            -webkit-transition: all .5s linear;
            transition: all .5s linear;
        } */

        .rotate.down {
            -moz-transform: rotate(180deg);
            -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
        }

        .collapsible {
            background-color: white;
            color: black;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
        }



        .cnt {
            padding: 0 18px;
            display: none;
            overflow: hidden;
            background-color: #f1f1f1;
        }

        .tabs::-webkit-scrollbar {
            display: none;
        }

        #slideLeft,
        #slideRight {
            display: none;
        }

        #slideLeft:focus,
        #slideRight:focus {
            border: none;
            outline: none;
        }

        #slideLeft:hover,
        #slideRight:hover {
            opacity: 1;
            transform: scale(0.85);
        }

        .cat .act,
        .cta:hover {
            background-color: rgb(230, 59, 59);
            color: white;
        }

        .mySearch1 {
            background-image: url("/images/svg/search.svg");
            background-repeat: no-repeat;
            background-position: 5px;
            padding-left: 24px;
        }

        /****************************/
        @media only screen and (max-width: 600px) {
            .mySearch1 {
                width: 80%;
            }
        }

        @media only screen and (max-width: 1279px) {

            #slideLeft,
            #slideRight {
                display: block;
            }

            .tabs {
                overflow: auto;
                white-space: nowrap;
            }
        }

        @media only screen and (min-width: 768px) {
            .sticky_logo {
                display: block;
                transition: all 0.4s;
            }

            .profileCard {
                width: 30%;
            }
        }
    </style>
