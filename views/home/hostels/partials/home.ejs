  <div class=" font-bold text-2xl md:text-4xl md:ml-32 mt-10 md:my-10 flex justify-center md:justify-start">
    Hostel Members
  </div>
  <div class="flex flex-wrap justify-start mx-8 md:mx-28">
    <% members.forEach((member,i)=>{ %>
      <div style="height: 450px; width: 380px"
        class=" hidden md:block overflow-hidden bg-blue-600 rounded-md mb-24 mx-4 cursor-pointer">
        <div class="bg-gray-200 rounded-md">
          <img style="height: 300px" src="/hab/uploads/hostel/<%=member.photo%>" alt="ProfilePic"
            class="w-full object-contain" />
        </div>
        <div class="ml-3.5 text-2xl text-white font-semibold mt-4">
          <%= member.Mname %>
        </div>
        <div class="ml-3.5 text-lg text-white mt-2 mb-2">
          <%= member.position %>
        </div>
        <svg class="w-full" width="200" height="1" viewBox="0 0 420 1" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="0.5" y1="0.5" x2="419.5" y2="0.500031" stroke="white" stroke-linecap="round" />
        </svg>
        <div class="flex justify-between mx-3.5 my-2">
          <div class="text-sm text-white">
            <%= member.email %>
          </div>
          <div class="text-sm text-white"><%= member.contact1 %>
          </div>
        </div>
      </div>
      <div class="block md:hidden flex justify-center">
        <div style="width: 320px" class="bg-blue-600 mt-8 rounded-md cursor-pointer">
          <div class="bg-gray-200 flex justify-center">
            <img src="/hab/uploads/hostel/<%=member.photo%>" alt="ProfilePic"
              class="h-64 w-auto object-contain rounded-sm" />
          </div>
          <div class="h-16">
            <div class="text-white text-2xl ml-4 pt-1">
              <%= member.Mname %>
            </div>
            <div class="text-white text-lg ml-4 pt-1">
              <%= member.position %>
            </div>
          </div>
          <svg class="w-full px-4 mt-3" width="360" height="1" viewBox="0 0 360 1" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <line x1="0.5" y1="0.5" x2="359.5" y2="0.500031" stroke="white" stroke-linecap="round" />
          </svg>
          <div class="h-20">
            <div class="text-white text-lg ml-4 pt-1">
              <%= member.email %>
            </div>
            <div class="text-white text-lg ml-4 pt-1">
              <%= member.contact1 %>
            </div>
          </div>
        </div>
      </div>

      <% }) %>
  </div>
  <style>
    @media only screen and (max-width: 600px){
      .screen1{
      width: 100%;
      height: 200px;
      }
      .eventcard{
      width: 100%;
      height: 300px;
      margin-left: 10px;
      }
      .imagebox{
      width: 100%;
      height: 200px;
      }
    }
    @media only screen and (min-width: 600px){
      .screen1{
      max-width: 850px;
      max-height: 420px;
      }
      .eventcard{
      width: 850px;
      height: 550px;
      }
      .imagebox{
      width: 850px;
      height: 420px;
      }
    }
  </style>
  <div class="pb-8 mt-10 md:mt-0" style="background-color: #1e2532">
    <div class="text-white py-8 flex justify-center md:justify-start text-xl md:text-4xl font-bold md:mx-32">
      Events at <%=hostel.name %> Hostel
    </div>
    <div class="splide md:ml-32">
      <div class="splide__arrows hidden">
        <button class="splide__arrow splide__arrow--prev"></button>
        <button class="splide__arrow splide__arrow--next"></button>
      </div>
      <div class="splide__track mx-4 md:mx-0">
        <ul class="splide__list">
          <!-- LOOP HERE FOR THE DATES-->
            <% events.forEach((event,i)=>{ %>
              <li class="splide__slide">
              <div  class="eventcard carousel flex flex-col bg-blue-600 rounded mr-4 " >
                <div class="imagebox bg-gray-200 flex justify-center " >
                  <img class="screen1 object-contain rounded-sm"   src="/hab/uploads/hostel_files/<%= event.path %>" />
                </div>
                <div class="mt-6 mx-5 text-white text-sm md:text-xl">
                  <%=event.date.getDate()+' /'+(event.date.getMonth()+1)+'/'+event.date.getFullYear()%>
                </div>
                <div class="flex mx-5 mb-4 justify-between items-center">
                  <div class="font-bold text-sm md:text-xl text-white">
                    <%= event.name %>
                  </div>
                  <div>
                    <a href="<%= event.imagepath %>"><svg width="33" height="33" viewBox="0 0 33 33" fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                          d="M22.184 29.4407H11.2906C6.58398 29.4407 3.41064 26.4127 3.41064 21.894V10.334C3.41064 5.81405 6.58398 2.77405 11.2906 2.77405H22.184C26.904 2.77405 30.0773 5.81405 30.0773 10.334V21.894C30.0773 26.4127 26.904 29.4407 22.184 29.4407ZM19.7706 15.1074H11.304C10.744 15.1074 10.304 15.5607 10.304 16.1074C10.304 16.6674 10.744 17.1074 11.304 17.1074H19.7706L16.464 20.4007C16.2773 20.5874 16.1706 20.854 16.1706 21.1074C16.1706 21.3594 16.2773 21.614 16.464 21.814C16.8506 22.2007 17.4906 22.2007 17.8773 21.814L22.904 16.814C23.2773 16.4407 23.2773 15.774 22.904 15.4007L17.8773 10.4007C17.4906 10.014 16.8506 10.014 16.464 10.4007C16.0773 10.8007 16.0773 11.4274 16.464 11.8274L19.7706 15.1074Z"
                          fill="white" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div></li>
              <% }) %>
        </ul>
      </div>
    </div>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>

<script>
  var elms = document.getElementsByClassName("splide");
  for (var i = 0, len = elms.length; i < len; i++) {
    const config = {
      drag: "free",
      autoWidth: true,
      pagination: false,
      lazyLoad: "nearby",
    };
    new Splide(elms[i], config).mount();
  }
</script>